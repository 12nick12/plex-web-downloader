extends layout

block content
  h1= movie.title

  a(href="#",onclick="window.history.back();") back to the list
  br
  br

  label Note
  p= movie.rating

  label Download
  br
  each file, i in movie.file
    a(href="/pwd/file/#{file.id}/#{file.filename}") #{file.size} #{file.filename}
    br
  br
  label Résumé
  p= movie.summary
  br
  br
  label Genre
  each tag, i in movie.tags_genre
    if(tag!='')
      span= tag
      | &nbsp;
  br
  br
  label Acteurs
  each tag, i in movie.tags_star
    if(tag!='')
      span= tag
      | &nbsp;
  br
